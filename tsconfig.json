{
    "compilerOptions": {
		"experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2020",
           // Generate d.ts files
        "declaration": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "out",
        "skipLibCheck": true,
        "resolveJsonModule": true,
    },
    "exclude": [
        "src_old",
        "out",
        "node_modules"
    ]
  }